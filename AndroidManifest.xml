        <activity android:name="com.fuwu.mobileim.activity.BackPwdActicity" />
        <activity android:name="com.fuwu.mobileim.activity.SystemPushActivity" />
        <activity android:name="com.fuwu.mobileim.activity.UpdatePwdActivity" />

        <service android:name="com.fuwu.mobileim.activity.RequstService" />

        <activity android:name="com.fuwu.mobileim.activity.MyInformationActivity" />
        <activity android:name="com.fuwu.mobileim.activity.FragmengtActivity" >
