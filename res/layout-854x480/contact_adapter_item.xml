<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


        <TextView
            android:id="@+id/contact_sort_key"
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:gravity="center_vertical"
            android:background="#F4F4F4"
            android:text="sdfsf"
            android:paddingLeft="13.34dp"
            android:textColor="@color/text_color"
            android:textSize="13dp" />


    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_below="@+id/contact_sort_key"
        android:background="#FFFFFF" >

        <com.fuwu.mobileim.view.CircularImage
             android:id="@+id/contact_user_face"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:src="@drawable/moren" />

        <TextView
            android:id="@+id/contact_name"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:singleLine="true"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/contact_gou"
            android:layout_width="23dp"
            android:layout_height="13.8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/gou" />

        <ImageView
            android:id="@+id/contact_yue"
            android:layout_width="23dp"
            android:layout_height="13.8dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:background="@drawable/yue" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#D4D4D4" />

</RelativeLayout>