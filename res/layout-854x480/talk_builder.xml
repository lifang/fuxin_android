<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/talk_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:singleLine="true"
        android:text="马龙"
        android:textColor="#469AD3"
        android:textSize="18dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/system_textColor" />

    <RelativeLayout
        android:id="@+id/nick_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:padding="10dp" >

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:text="@string/talk_nickname"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/info_nickname"
            android:layout_width="100dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/nickname"
            android:background="@drawable/chat_info_edit_style"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="32"
            android:singleLine="true"
            android:text="小学生" />

        <Button
            android:id="@+id/info_nickname_ok"
            android:layout_width="60dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/info_img"
            android:background="@drawable/touming_btn"
            android:text="确定" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/system_textColor" />

    <TextView
        android:id="@+id/del_talk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="@string/delate"
        android:textColor="@color/black"
        android:textSize="16dp" />

</LinearLayout>