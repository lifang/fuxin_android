<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/display_linear"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shape"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/display_top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <com.fuwu.mobileim.view.CircularImage
            android:id="@+id/block_display_userface"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/moren" />

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/block_display_userface"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/block_display_userface" >

            <TextView
                android:id="@+id/block_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="135dp"
                android:text="叮叮叮"
                android:textColor="#333333"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/block_display_sex_item"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignTop="@+id/block_display_name"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="3dp"
                android:layout_toRightOf="@+id/block_display_name"
                android:background="@drawable/nv" />

            <ImageView
                android:id="@+id/block_display_gou"
                android:layout_width="23dp"
                android:layout_height="13.8dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/block_display_sex_item"
                android:layout_marginRight="40dp"
                android:background="@drawable/gou" />

            <ImageView
                android:id="@+id/block_display_yue"
                android:layout_width="23dp"
                android:layout_height="13.8dp"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/block_display_sex_item"
                android:layout_marginRight="15dp"
                android:background="@drawable/yue" />

            <TextView
                android:id="@+id/block_display_notename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/block_display_name"
                android:text="叮叮叮"
                android:textColor="#CCCCCC"
                android:textSize="15dp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="12dp"
        android:background="#E1E1E1" />

    <Button
        android:id="@+id/block_display_restore"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@drawable/button_bottom_shape"
        android:text="@string/receive_mess"
        android:textSize="17dp" />

</LinearLayout>