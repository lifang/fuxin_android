<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_top"
        android:layout_width="fill_parent"
        android:layout_height="63dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/setting_userface0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:gravity="center_vertical" >

            <com.fuwu.mobileim.view.CircularImage
                android:id="@+id/setting_userface"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/moren" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/setting_relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp"
            android:layout_toRightOf="@+id/setting_userface0" >

            <TextView
                android:id="@+id/setting_teachername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:maxWidth="200dp"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="17dp" />

            <ImageView
                android:id="@+id/setting_sex_item"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/setting_teachername" />

            <RelativeLayout
                android:id="@+id/setting_userface2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_teachername"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/certification_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/certification1"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/certification_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@+id/certification_one"
                    android:background="@drawable/certification2"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/certification_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@+id/certification_two"
                    android:background="@drawable/certification3"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="17dp"
                    android:background="@drawable/right_item" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#E1E1E1" />

    <ListView
        android:id="@+id/setting_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>