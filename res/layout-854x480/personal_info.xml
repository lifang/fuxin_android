<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F6F6F6"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/personal_info_top"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:background="@color/red_block" >

        <ImageButton
            android:id="@+id/contact_info_back"
            android:layout_width="30dip"
            android:layout_height="30dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人详情"
            android:textColor="#ffffff"
            android:textSize="17dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_below="@+id/personal_info_top"
        android:background="#F6F6F6"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/personal_userface0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical" >

            <com.fuwu.mobileim.view.CircularImage
                android:id="@+id/info_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:src="@drawable/moren" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="32dp"
            android:layout_toRightOf="@+id/personal_userface0" >

            <TextView
                android:id="@+id/info_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="160dp"
                android:singleLine="true"
                android:text=""
                android:textColor="#333333"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/info_sex"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:visibility="gone"
                android:layout_toRightOf="@+id/info_name" />

            <RelativeLayout
                android:id="@+id/personal_userface2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/info_name"
                android:layout_marginBottom="10dp"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/info_gouIcon"
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/gou"
                    android:visibility="gone"
                    />

                <ImageView
                    android:id="@+id/info_yueIcon"
                    android:layout_width="30dp"
                    android:layout_height="17dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="19dp"
                    android:layout_toRightOf="@+id/info_gouIcon"
                    android:src="@drawable/yue"
                    android:visibility="gone"
                     />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/personal_info_relativeLayout2"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true" >

        <TextView
            android:id="@+id/personal_info_customName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="备注"
            android:textColor="@color/text_color"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/info_rem"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="65dp"
            android:layout_toRightOf="@+id/personal_info_customName"
            android:background="@null"
            android:gravity="center"
            android:maxLength="32"
            android:singleLine="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="16dp" />

        <Button
            android:id="@+id/info_ok"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/chat_bottombar_btn_selector"
            android:text="编辑" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="#CFCFCF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout4"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/personal_info_relativeLayout3"
        android:background="@color/white" >

        <TextView
            android:id="@+id/personal_info_shield"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:text="屏蔽他(她)"
            android:textColor="@color/text_color"
            android:textSize="16dp" />

        <com.fuwu.mobileim.view.SlipButton
            android:id="@+id/personal_info_shielding"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:gravity="right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout5"
        android:layout_width="fill_parent"
        android:layout_height="190dip"
        android:layout_below="@+id/personal_info_relativeLayout4"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/hangye"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/white" >

            <TextView
                android:id="@+id/hangye_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="行业认证"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/info_lisence"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/hangye_text"
                android:gravity="right"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_info_fz"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/hangye"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="福指"
                android:textColor="#999999"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/info_fuzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:textColor="#999999"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_alignParentBottom="true"
                android:background="#CFCFCF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/personal_info_fz"
            android:background="@color/white" >

            <TextView
                android:id="@+id/info_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="个人简介"
                android:textColor="#999999"
                android:textSize="16dp" />

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_toRightOf="@+id/info_sign_text"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:scrollbars="none" >

                <TextView
                    android:id="@+id/info_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="16dp" />
            </ScrollView>
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/info_sendBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/personal_info_relativeLayout5"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_btn"
        android:text="发送消息"
        android:textColor="@color/white"
        android:textSize="18sp" />

</RelativeLayout>