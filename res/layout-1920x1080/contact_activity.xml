<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/a_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/out_button_shape"
        >

        <Button
            android:id="@+id/button_recently"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:background="@drawable/left_shape_red"
            android:textSize="18sp" 
            android:layout_marginLeft="4px"
            android:text="@string/button_recently" />


        <Button
            android:id="@+id/view_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/address_book_buttoncolor_red" />

        <Button
            android:id="@+id/button_trading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red_block"
            android:background="@drawable/middle_shape_white"
            android:textSize="18sp" 
            android:text="@string/button_trading" />

        <Button
            android:id="@+id/view_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/address_book_buttoncolor_red" />

        <Button
            android:id="@+id/button_subscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="@color/red_block"
            android:background="@drawable/right_shape_white"
            android:textSize="18sp" 
            android:text="@string/button_subscription" />
    </LinearLayout>


    <com.fuwu.mobileim.view.XListView
        android:id="@+id/contacts_list_view_refresh"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/a_layout"
        
        android:fadingEdge="none"
        android:scrollbars="none" >
    </com.fuwu.mobileim.view.XListView>


</RelativeLayout>