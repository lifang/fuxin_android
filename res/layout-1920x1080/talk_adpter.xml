<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="20dp"
         >

        <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="40dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" >

            <com.fuwu.mobileim.view.CircularImage
                android:id="@+id/head"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerCrop"
                android:src="@drawable/moren" />
            <ImageView
                android:id="@+id/pingbi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/head"
                android:layout_alignRight="@id/head"
                android:scaleType="centerCrop"
                android:src="@drawable/pingbi" />
            <LinearLayout
                android:id="@+id/statics"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/yuan"
                android:gravity="center" >

                <TextView
                    android:id="@+id/size"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/layout"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                 android:text=""
                android:textColor="#333333"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:ellipsize="end"
                android:text=""
                android:layout_marginTop="0.5dp"
                android:singleLine="true"
                android:textColor="#999999"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/layout2"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/dath"
                android:text=""
                android:textColor="#999999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>