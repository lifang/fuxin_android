<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personal_info_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/personal_info_top"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/red_block" >

        <ImageButton
            android:id="@+id/contact_info_back"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="个人详情"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/chat_other"
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
            android:background="@drawable/other" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout2"
        android:layout_width="fill_parent"
        android:layout_height="105dp"
        android:layout_below="@+id/personal_info_top"
        android:orientation="vertical" >
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout3"
        android:layout_width="fill_parent"
        android:layout_height="98dp"
        android:layout_below="@+id/personal_info_top"
        android:layout_marginTop="55dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/info_img_layout"
            android:layout_width="87dp"
            android:layout_height="87dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/face_bg"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/info_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/info_img_layout"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/info_img_layout"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text=""
            android:textColor="#333333"
            android:textSize="19sp" />
                    <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/personal_info_relativeLayout5"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/personal_info_relativeLayout3"
        android:background="@color/white"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/personal_info_hangye"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:background="@color/white" 
            android:visibility="gone" >


            <TextView
                android:id="@+id/hangye_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="认证"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face6"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face5"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face4"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face3"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face2"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face1"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp" >

                    <ImageView
                        android:id="@+id/info_face0"
                        android:layout_width="30dp"
                        android:layout_height="30dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_info_fz"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/personal_info_hangye"
            android:background="@color/white"
            android:visibility="gone" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="福指"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/info_fuzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="#999999"
                android:textSize="17sp" />
                        <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_info_sex"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/personal_info_fz"
            android:background="@color/white" >

           

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="性别"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/info_sex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="#999999"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_info_location"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_below="@+id/personal_info_sex"
            android:background="@color/white" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:text="地址"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/info_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:textColor="#999999"
                android:textSize="17sp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/personal_info_gerenjianjie"
            android:layout_width="fill_parent"
            android:layout_height="84dp"
            android:layout_below="@+id/personal_info_location"
            android:background="@color/white"
            android:visibility="gone" >

            <TextView
                android:id="@+id/info_sign_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="福师简介"
                android:textColor="@color/text_color"
                android:textSize="19sp" />

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/info_sign_text"
                android:cacheColorHint="#00000000"
                android:fadingEdge="none"
                android:listSelector="#00000000"
                android:scrollbars="none" >

                <TextView
                    android:id="@+id/info_sign"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="17dp" />
            </ScrollView>

            <TextView
                android:id="@+id/info_sign_null"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:layout_toRightOf="@+id/info_sign_text"
                android:gravity="center"
                android:text="(此福师尚未编写信息)"
                android:textColor="#999999"
                android:textSize="17dp"
                android:visibility="gone" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="#CFCFCF" />
        </RelativeLayout>
    </RelativeLayout>

    <Button
        android:id="@+id/info_sendBtn"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/login_btn"
        android:text="发送消息"
        android:textColor="@color/white"
        android:textSize="19sp" />

</RelativeLayout>