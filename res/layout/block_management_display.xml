<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/setting_top"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/setting_userface0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical" >

            <com.fuwu.mobileim.view.CircularImage
                android:id="@+id/setting_userface"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/message_content"
            android:layout_alignTop="@+id/user_face"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/setting_userface0" >

            <TextView
                android:id="@+id/block_display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/message_content"
                android:text="叮叮叮"
                android:textColor="#333333"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/sex_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26.8px"
                android:layout_toRightOf="@+id/block_display_name"
                android:background="@drawable/nv" />

            <LinearLayout
                android:id="@+id/setting_userface2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/setting_teachername"
                android:layout_marginRight="1px"
                android:gravity="center_vertical" >

                <ImageView
                    android:id="@+id/huifu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gou" />

                <ImageView
                    android:id="@+id/huifu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gou" />

                <ImageView
                    android:id="@+id/huifu_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/gou" />
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#E1E1E1" />

    <ListView
        android:id="@+id/setting_listview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fadingEdge="none"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>