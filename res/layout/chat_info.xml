<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/chat_info_style"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="10dp" >

    <com.fuwu.mobileim.view.CircularImage
        android:id="@+id/info_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/headpic" />

    <TextView
        android:id="@+id/info_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/info_img"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/info_img"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/info_rem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/info_img"
        android:layout_alignLeft="@id/info_name"
        android:text="备注:" />

    <ImageView
        android:id="@+id/info_yueIcon"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/info_img"
        android:layout_marginRight="15dp"
        android:src="@drawable/yue" />

    <ImageView
        android:id="@+id/info_gouIcon"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/info_img"
        android:layout_marginRight="45dp"
        android:src="@drawable/gou" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_img"
        android:layout_marginTop="5dp"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/info_remText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/info_img"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="15dp"
        android:text="设置备注 : "
        android:textColor="#000000" />

    <EditText
        android:id="@+id/info_remInfo"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/info_remText"
        android:layout_toRightOf="@id/info_remText"
        android:background="@drawable/chat_info_edit_style"
        android:maxLength="32"
        android:singleLine="true"/>

    <Button
        android:id="@+id/info_ok"
        android:layout_width="42dp"
        android:layout_height="34dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/info_img"
        android:layout_marginTop="8dp"
        android:background="@drawable/chat_bottombar_btn_selector"
        android:text="编辑" />

    <View
        android:id="@+id/info_bzLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_remText"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <LinearLayout
        android:id="@+id/info_rz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/info_remText"
        android:layout_below="@id/info_bzLine"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_lisenceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="认证行业 : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/info_lisence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View
        android:id="@+id/info_rzLine"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/info_rz"
        android:layout_marginTop="10dp"
        android:background="#cccccc" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/info_remText"
        android:layout_below="@id/info_rzLine"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/info_signText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="个人简介 : "
            android:textColor="#000000" />

        <TextView
            android:id="@+id/info_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>