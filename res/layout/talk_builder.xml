<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/talk_dialog"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="马龙"
        android:textColor="#469AD3"
        android:textSize="18dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/red" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="@string/talk_nickname"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/info_nickname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/info_remText"
            android:layout_toRightOf="@id/info_remText"
            android:background="@drawable/chat_info_edit_style"
            android:maxLength="32"
            android:singleLine="true"
            android:text="小学生" />

        <Button
            android:id="@+id/info_nickname_ok"
            android:layout_width="42dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/info_img"
            android:layout_marginTop="8dp"
            android:background="@drawable/touming_btn"
            android:text="确定" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/red" />

    <TextView
        android:id="@+id/del_talk"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:text="@string/delate"
        android:textColor="@color/black"
        android:textSize="16dp" />

</LinearLayout>