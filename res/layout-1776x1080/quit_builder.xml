<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/talk_dialog"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/quit_message"
        android:textColor="@color/system_textColor"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:background="@drawable/button_bottom_shape"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/quit_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="99"
            android:background="@drawable/quit_button_cancel_shape"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/system_textColor"
            android:textSize="16sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:background="@color/white" />

        <TextView
            android:id="@+id/quit_ok"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="99"
            android:background="@drawable/quit_button_ok_shape"
            android:gravity="center"
            android:text="@string/phone_ok"
            android:textColor="@color/system_textColor"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>